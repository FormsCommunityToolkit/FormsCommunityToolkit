<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:FormsCommunityToolkit.Controls;assembly=FormsCommunityToolkit.Controls"
             x:Class="FormsCommunityToolkit.Samples.Views.ControlsPage"
             Title="Controls">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <controls:CheckBox IsChecked="True" x:Name="CheckBoxElement" />
                <Label
                    BindingContext="{x:Reference CheckBoxElement}"
                    IsVisible="{Binding IsChecked}"
                    VerticalOptions="CenterAndExpand"
                    Text="Simple CheckBox" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>