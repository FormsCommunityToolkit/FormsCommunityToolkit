<?xml version="1.0" encoding="UTF-8" ?>
<pages:BasePage x:Class="Xamarin.CommunityToolkit.Sample.Pages.Behaviors.ValidationGroupBehaviorPage"
                xmlns="http://xamarin.com/schemas/2014/forms"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:pages="clr-namespace:Xamarin.CommunityToolkit.Sample.Pages"
                xmlns:xct="http://xamarin.com/schemas/2020/toolkit">

  <pages:BasePage.Resources>

    <xct:ValidationGroup x:Key="TotalValidationGroup" x:Name="TotalValidationGroup">
      <xct:ValidationGroup x:Name="ContactValidationGroup" />
      <xct:ValidationGroup x:Name="InfoValidationGroup" />
    </xct:ValidationGroup>

    <Style x:Key="InvalidEntryStyle" TargetType="Entry">
      <Setter Property="TextColor" Value="Red" />
    </Style>

    <Style x:Key="InvalidEditorStyle" TargetType="Editor">
      <Setter Property="TextColor" Value="Red" />
    </Style>
  </pages:BasePage.Resources>

  <StackLayout Padding="{StaticResource ContentPadding}"
               Spacing="25"
               VerticalOptions="StartAndExpand">

    <Label Text="Name (required): (Length min. 3)" />
    <Entry Placeholder="e.g. John Doe">
      <Entry.Behaviors>
        <xct:CharactersValidationBehavior Flags="ValidateOnAttaching,ValidateOnValueChanging"
                                          Group="{Reference ContactValidationGroup}"
                                          InvalidStyle="{StaticResource InvalidEntryStyle}"
                                          MinimumCharacterCount="3" />
      </Entry.Behaviors>
    </Entry>

    <Label Text="Email (required): (Length min. 3)" />
    <Entry Placeholder="e.g. john@doe.com">
      <Entry.Behaviors>
        <xct:MultiValidationBehavior Flags="ValidateOnAttaching,ValidateOnValueChanging"
                                     Group="{Reference ContactValidationGroup}"
                                     InvalidStyle="{StaticResource InvalidEntryStyle}">
          <xct:CharactersValidationBehavior MinimumCharacterCount="3" />
          <xct:EmailValidationBehavior />
        </xct:MultiValidationBehavior>
      </Entry.Behaviors>
    </Entry>

    <Frame BackgroundColor="LightGreen"
           BorderColor="Green"
           CornerRadius="8"
           IsVisible="{Binding Source={Reference ContactValidationGroup}, Path=IsValid}">
      <Label Text="Contact details are valid" TextColor="Green" />
    </Frame>

    <BoxView BackgroundColor="LightGray" HeightRequest="0.5" />

    <Label Text="Ask a question: (Length min. 10)" />
    <Entry Placeholder="Your question">
      <Entry.Behaviors>
        <xct:CharactersValidationBehavior Flags="ValidateOnAttaching,ValidateOnValueChanging"
                                          Group="{Reference InfoValidationGroup}"
                                          InvalidStyle="{StaticResource InvalidEditorStyle}"
                                          MinimumCharacterCount="10" />
      </Entry.Behaviors>
    </Entry>

    <Frame BackgroundColor="LightGreen"
           BorderColor="Green"
           CornerRadius="8"
           IsVisible="{Binding Source={Reference InfoValidationGroup}, Path=IsValid}">
      <Label Text="Info is valid" TextColor="Green" />
    </Frame>

    <Label Text="Fill in all fields before button is enabled" />
    <Button x:Name="SubmitButton" IsEnabled="{Binding Source={Reference TotalValidationGroup}, Path=IsValid}">
      <Button.Triggers>
        <DataTrigger Binding="{Binding IsEnabled, Source={Reference SubmitButton}}"
                     TargetType="Button"
                     Value="True">
          <Setter Property="BackgroundColor" Value="Green" />
          <Setter Property="Text" Value="All valid" />
        </DataTrigger>
        <DataTrigger Binding="{Binding IsEnabled, Source={Reference SubmitButton}}"
                     TargetType="Button"
                     Value="False">
          <Setter Property="BackgroundColor" Value="Red" />
          <Setter Property="Text" Value="Invalid" />
        </DataTrigger>
      </Button.Triggers>
    </Button>
  </StackLayout>

</pages:BasePage>
