<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Xamarin.CommunityToolkit.Sample.Pages"
             x:Class="Xamarin.CommunityToolkit.Sample.Pages.Views.SemanticOrderViewPage"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Element outside the Semantic View"></Button>
            <xct:SemanticOrderView x:Name="acv">
                <StackLayout>
                    <Label x:Name="second" Text="Second" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                    <Label Text="Top Label" HeightRequest="50"/>
                    <Label x:Name="third" Text="Third" HeightRequest="50"/>
                    <Label x:Name="fourth" Text="Fourth" HeightRequest="50"/>
                    <BoxView BackgroundColor="Purple" HeightRequest="50"/>
                    <BoxView BackgroundColor="Green" HeightRequest="50"/>
                    <Label x:Name="fifth" Text="Fifth and last" HeightRequest="50"/>
                    <Label x:Name="first" Text="First" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                </StackLayout>
            </xct:SemanticOrderView>
        </StackLayout>
    </ContentPage.Content>
</pages:BasePage>